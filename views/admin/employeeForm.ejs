<% layout('layout') -%>

<!-- Employee Add / Edit Form - polished UI -->
<style>
  /* Container card */
  .employee-card {
    max-width: 880px;
    margin: 2.5rem auto;
    background: linear-gradient(180deg, #ffffff 0%, #fbfbff 100%);
    border-radius: 14px;
    box-shadow: 0 10px 30px rgba(18,38,63,0.08);
    overflow: hidden;
    display: grid;
    grid-template-columns: 1fr 420px;
    gap: 0;
    animation: cardEnter 0.6s cubic-bezier(.2,.8,.2,1);
  }

  @keyframes cardEnter {
    from { transform: translateY(18px); opacity: 0; }
    to   { transform: translateY(0); opacity: 1; }
  }

  /* Left (form) */
  .employee-card .left {
    padding: 28px;
  }

  .form-title {
    display:flex;
    align-items:center;
    gap:12px;
    margin-bottom:18px;
  }
  .form-title h2 { margin:0; font-size:1.45rem; letter-spacing:0.2px; }
  .subtitle { color:#6b7280; font-size:0.95rem; margin-bottom:1rem; }

  /* Fields grid */
  .fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  .fields .full { grid-column: 1 / -1; }

  .form-label { font-weight:600; font-size:0.92rem; color:#344054; margin-bottom:6px; display:block; }
  .form-control {
    border-radius:10px;
    padding:10px 12px;
    border:1px solid #e6e9ef;
    box-shadow: none;
  }
  .form-control:focus {
    outline: none;
    border-color: #7dd3fc;
    box-shadow: 0 6px 18px rgba(34,197,94,0.06);
  }

  /* Right panel (info / avatar / actions) */
  .employee-card .right {
    background: linear-gradient(180deg, #f8fbff, #eef9ff);
    padding: 28px;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:space-between;
    gap:14px;
  }
  .avatar {
    width:120px;
    height:120px;
    border-radius:14px;
    background: linear-gradient(135deg,#60a5fa,#34d399);
    display:flex;
    align-items:center;
    justify-content:center;
    color:white;
    font-weight:700;
    font-size:2.2rem;
    box-shadow: 0 8px 24px rgba(59,130,246,0.14);
  }
  .meta { text-align:center; color:#475569; }
  .meta .muted { color:#94a3b8; font-size:0.9rem; }

  /* buttons */
  .btn-row { width:100%; display:flex; gap:12px; margin-top:8px; }
  .btn-save {
    flex:1;
    border-radius:10px;
    padding:10px 14px;
    background: linear-gradient(90deg,#06b6d4,#3b82f6);
    border: none;
    color:white;
    font-weight:700;
    box-shadow: 0 8px 20px rgba(59,130,246,0.12);
    transition: transform .15s ease, box-shadow .15s ease;
  }
  .btn-save:hover { transform: translateY(-3px); box-shadow: 0 14px 30px rgba(59,130,246,0.18); }

  .btn-cancel {
    background:transparent;
    border:1px solid #e6e9ef;
    color:#0f172a;
    border-radius:10px;
    padding:10px 14px;
    font-weight:600;
  }

  /* small helpers */
  .hint { font-size:0.88rem; color:#64748b; margin-top:6px; }
  .alert-inline { margin-bottom:12px; }

  /* responsive */
  @media (max-width: 900px) {
    .employee-card { grid-template-columns: 1fr; }
    .employee-card .right { order: -1; }
    .fields { grid-template-columns: 1fr; }
  }
</style>

<div class="employee-card">
  <!-- LEFT: Form -->
  <div class="left">
    <div class="form-title">
      <svg width="36" height="36" viewBox="0 0 24 24" fill="none" style="flex:none">
        <rect x="1" y="4" width="22" height="16" rx="4" fill="#eaf8ff"/>
        <path d="M8 11h8M8 15h5" stroke="#0ea5e9" stroke-width="1.6" stroke-linecap="round" />
      </svg>
      <div>
        <h2><%= employee ? 'Edit Employee' : 'Add Employee' %></h2>
        <div class="subtitle">Create or update employee records. Password left blank to keep existing password.</div>
      </div>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-inline"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-inline"><%= error %></div>
    <% } %>

    <form method="POST" action="/admin/employees" novalidate>
      <% if (employee) { %>
        <input type="hidden" name="id" value="<%= employee._id %>" />
      <% } %>

      <div class="fields">
        <div>
          <label class="form-label">Name</label>
          <input name="name" value="<%= employee ? employee.name : '' %>" class="form-control" required />
        </div>

        <div>
          <label class="form-label">Email</label>
          <input name="email" type="email" value="<%= employee ? employee.email : '' %>" class="form-control" required />
        </div>

        <div>
          <label class="form-label">Password <small class="muted">(for new user)</small></label>
          <div style="display:flex; gap:8px;">
            <input id="passwordField" name="password" type="password" class="form-control" placeholder="Leave blank to retain current password">
            <button id="togglePwd" type="button" class="btn btn-outline-secondary" style="border-radius:10px; padding:6px 10px;">Show</button>
          </div>
          <div class="hint">If creating a new employee, set a temporary password. User can change later.</div>
        </div>

        <div>
          <label class="form-label">Designation</label>
          <input name="designation" value="<%= employee ? employee.designation : '' %>" class="form-control" />
        </div>

        <div>
          <label class="form-label">Department</label>
          <input name="department" value="<%= employee ? employee.department : '' %>" class="form-control" />
        </div>

        <div>
          <label class="form-label">Contact</label>
          <input name="contact" value="<%= employee ? employee.contact : '' %>" class="form-control" />
        </div>

        <div class="full">
          <label class="form-label">Status</label>
          <select name="status" class="form-control">
            <option value="active" <%= employee && employee.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="inactive" <%= employee && employee.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
          </select>
        </div>
      </div>

      <div style="margin-top:18px; display:flex; gap:12px; align-items:center;">
        <button class="btn-save" type="submit">üíæ Save Employee</button>
        <a class="btn-cancel" href="/admin/employees">Cancel</a>
      </div>
    </form>
  </div>

  <!-- RIGHT: Profile card & quick actions -->
  <div class="right">
    <div style="width:100%; text-align:center;">
      <div class="avatar">
        <% if (employee && employee.name) { 
             const initials = (employee.name.split(' ').map(s => s[0]).slice(0,2).join('')).toUpperCase();
        %>
          <%= initials %>
        <% } else { %>
          + 
        <% } %>
      </div>

      <div class="meta" style="margin-top:12px;">
        <div style="font-weight:700; font-size:1.05rem;">
          <%= employee ? employee.name : 'New Employee' %>
        </div>
        <div class="muted" style="margin-top:6px;">
          <%= employee ? (employee.email || '') : 'Fill the form to create account' %>
        </div>
      </div>
    </div>

    <div style="width:100%;">
      <div style="display:flex; gap:10px; flex-direction:column;">
        <a href="/admin/employees" class="btn btn-outline-primary" style="border-radius:10px; padding:10px;">üîô Back to Employees</a>
        <% if (employee) { %>
          <a href="/admin/employees/<%= employee._id %>/edit" class="btn btn-outline-secondary" style="border-radius:10px; padding:10px;">‚úèÔ∏è Reopen Edit</a>
          <form action="/admin/employees/<%= employee._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this employee?');">
            <button class="btn btn-outline-danger" style="border-radius:10px; padding:10px; width:100%;">üóëÔ∏è Delete Employee</button>
          </form>
        <% } %>
      </div>
    </div>

    <div style="width:100%; text-align:center; color:#64748b; font-size:0.9rem;">
      <div>Tip: Use the "Back to Employees" to see updated list after saving.</div>
    </div>
  </div>
</div>

<script>
  // Toggle password visibility
  document.addEventListener('DOMContentLoaded', () => {
    const pwd = document.getElementById('passwordField');
    const btn = document.getElementById('togglePwd');
    if (btn && pwd) {
      btn.addEventListener('click', () => {
        if (pwd.type === 'password') {
          pwd.type = 'text';
          btn.textContent = 'Hide';
        } else {
          pwd.type = 'password';
          btn.textContent = 'Show';
        }
      });
    }

    // simple client-side validation example (keeps server-side intact)
    const form = document.querySelector('form');
    form.addEventListener('submit', (e) => {
      const name = form.querySelector('[name="name"]').value.trim();
      const email = form.querySelector('[name="email"]').value.trim();
      if (!name || !email) {
        e.preventDefault();
        alert('Name and Email are required.');
      }
    });
  });
</script>
