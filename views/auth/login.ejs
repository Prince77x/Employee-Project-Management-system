<% layout('layout') -%>

<style>
  body {
    background: linear-gradient(120deg, #87ceeb, #d2b48c);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-container {
    max-width: 420px;
    margin: auto;
    background: #fffaf0;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  h2 {
    text-align: center;
    font-weight: bold;
    font-size: 1.8rem;
    background: linear-gradient(90deg, #8b4513, #87ceeb);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1.5rem;
  }

  label {
    font-weight: 600;
    color: #5c4033;
  }

  input {
    border-radius: 8px;
    border: 1px solid #cbbfb1;
    padding: 0.65rem;
    font-size: 0.95rem;
  }
  input:focus {
    border-color: #87ceeb;
    box-shadow: 0 0 6px rgba(135,206,235,0.6);
  }

  .btn-login {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    font-weight: 600;
    background: linear-gradient(90deg, #8b4513, #87ceeb);
    color: white;
    border: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  .btn-login:hover {
    background: linear-gradient(90deg, #5c4033, #4682b4);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.2);
  }

  .seed-info {
    font-size: 0.85rem;
    color: #5c4033;
    margin-top: 1rem;
    text-align: center;
  }
  .seed-info strong {
    color: #8b4513;
  }
</style>

<div class="login-container">
  <h2>Login to EPMS</h2>

  <form method="POST" action="/auth/login">
    <div class="mb-3">
      <label>Email</label>
      <input name="email" type="email" class="form-control" required>
    </div>

    <div class="mb-3">
      <label>Password</label>
      <input name="password" type="password" class="form-control" required>
    </div>

    <button class="btn-login">Login</button>
  </form>

  <hr/>
  <div class="seed-info">
    Seed admin created with email <strong>admin@example.com</strong>  
    and password <strong>Admin@123</strong> (run seedAdmin.js)
  </div>
</div>
